resource "aws_ecr_repository" "backend-repo" {
  name                 = "${var.prefix}-backend"
  image_tag_mutability = "IMMUTABLE"
}

resource "aws_ecr_repository_policy" "backend-repo-policy" {
  repository = aws_ecr_repository.backend-repo.name
  policy     = <<EOF
  {
    "Version": "2008-10-17",
    "Statement": [
      {
        "Sid": "adds full ecr access to the teinformatech-backend repository",
        "Effect": "Allow",
        "Principal": "*",
        "Action": [
          "ecr:BatchCheckLayerAvailability",
          "ecr:BatchGetImage",
          "ecr:CompleteLayerUpload",
          "ecr:GetDownloadUrlForLayer",
          "ecr:GetLifecyclePolicy",
          "ecr:InitiateLayerUpload",
          "ecr:PutImage",
          "ecr:UploadLayerPart"
        ]
      }
    ]
  }
  EOF
}

