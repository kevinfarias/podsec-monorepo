<h1>Listing Podcasts</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Assunto</th>
      <th>Url</th>
      <th>Tags</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for podcast <- @podcasts do %>
    <tr>
      <td><%= podcast.titulo %></td>
      <td><%= podcast.assunto %></td>
      <td><%= podcast.url %></td>
      <td><%= podcast.tags %></td>

      <td>
        <span><%= link "Show", to: Routes.podcast_path(@conn, :show, podcast) %></span>
        <span><%= link "Edit", to: Routes.podcast_path(@conn, :edit, podcast) %></span>
        <span><%= link "Delete", to: Routes.podcast_path(@conn, :delete, podcast), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Podcast", to: Routes.podcast_path(@conn, :new) %></span>
